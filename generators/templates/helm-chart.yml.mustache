{{#pods}}
apiVersion: v1
kind: Pod
metadata:
  name: {{name}}-pod
  labels:
    app: {{name}}
spec:
  containers:
  - name: {{name}}
    image: {{image}}
{{#port}}
    ports:
    - containerPort: {{port}}
      name: web
    env:
    - name: SERVER_PORT
      value: {{port}}
{{/port}}
{{#has_volume_mounts}}
    volumeMounts:
    {{#volume_secrets}}
      - name: {{name}}-volume
        mountPath: {{mount_path}}
        readOnly: true
    {{/volume_secrets}}
{{/has_volume_mounts}}

{{#has_volumes}}
  volumes:
    {{#volume_secrets}}
    # The secret data is exposed to Containers in the Pod through a Volume.
    - name: {{name}}-volume
      secret:
        secretName: {{name}}
    {{/volume_secrets}}
{{/has_volumes}}

  imagePullSecrets:
  - name: reg.osmhpi.de
---
{{/pods}}
{{#services}}
{{#port}}
apiVersion: v1
kind: Service
metadata:
  name: {{name}}-service
spec:
  selector:
    app: {{name}}
  ports:
  - port: {{port}}
    targetPort: web
  type: LoadBalancer
---
{{/port}}
{{/services}}
